<Window x:Class="StringManipulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Height="36" Margin="36,83,0,0" TextWrapping="Wrap"
                 Text="{Binding Path=InputVal}" VerticalAlignment="Top" Width="445" />
        <Button x:Name="Go" Content="Go" HorizontalAlignment="Left" Margin="137,201,0,0" VerticalAlignment="Top"
                Width="246" Height="39" Click="Go_OnClick" />
    </Grid>
</Window>